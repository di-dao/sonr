{
	"version": "2.0.0",
	"tasks": [
			{
				"label": "Serve",
				"dependsOn": [
					"Dev Run: Serve Node",
					"Dev Run: Serve Gateway"
				]
			},
			{
				"type": "shell",
				"label": "Dev Run: Serve Node",
				"command": "task start",
				"isBackground": true,
				"options": {
					"cwd": "${workspaceFolder}"
				},
				"icon": {
					"id": "play-circle",
					"color": "terminal.ansiWhite"
				},
				"detail": "task start",
				"problemMatcher": [],
				"presentation": {
					"echo": true,
					"reveal": "always",
					"revealProblems": "onProblem",
					"focus": true,
					"panel": "shared",
					"showReuseMessage": true,
					"group": "Dev Serve"
				}
			},
			{
			"type": "shell",
			"label": "Dev Run: Serve Gateway",
			"command": "task serve",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "play-circle",
				"color": "terminal.ansiWhite"
			},
			"detail": "task serve",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"revealProblems": "onProblem",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"group": "Dev Serve"
			}
		},
		{
			"label": "Build: Node Binary",
			"type": "shell",
			"command": "earthly --no-sat +docker",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "rocket",
				"color": "terminal.ansiBlue"
			},
			"detail": "Build binary with earthly",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"revealProblems": "onProblem",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"close": true,
				"group": "chain"
			}
		},
		{
			"label": "Open: gRPC UI Local Node",
			"type": "shell",
			"command": "grpcui -plaintext localhost:9090",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "play-circle",
				"color": "terminal.ansiBlue"
			},
			"detail": "Run local chain node",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"clear": true,
				"showReuseMessage": true,
				"close": true,
				"group": "chain"
			}
		},
	]
}
