{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/akhildevelops/devcontainer-features/apt:0": {},
    "ghcr.io/withfig/features/fig:1": {},
    "ghcr.io/sonrhq/devcontainer-features/ignite:2": {},
    "ghcr.io/sonrhq/devcontainer-features/icefire:2": {},
    "ghcr.io/sonrhq/devcontainer-features/task:1": {},
    "ghcr.io/devcontainers/features/go:1": {}
  },
  "hostRequirements": {
    "cpus": 12
  },
  "waitFor": "onCreateCommand",
  "postAttachCommand": [
    "icefire start",
    "task chain"
  ],
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ]
    }
  },
  "portsAttributes": {
    "1317": {
      "label": "API server",
      "onAutoForward": "openPreview"
    },
    "4001": {
      "label": "IceFire DB",
      "onAutoForward": "ignore"
    },
    "6001": {
      "label": "IceFire Redis Proxy",
      "onAutoForward": "ignore"
    },
    "26657": {
      "label": "RPC server",
      "onAutoForward": "ignore"
    },
    "8080": {
      "label": "Highway server",
      "onAutoForward": "ignore"
    },
    "9090": {
      "label": "gRPC server",
      "onAutoForward": "ignore"
    }
  }
}
