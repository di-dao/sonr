{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Generate: Common Proto",
			"command": "sh ./scripts/protogen.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "settings-gear",
				"color": "terminal.ansiWhite"
			},
			"detail": "Build monorepo common protobuf files",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"revealProblems": "onProblem",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"group": "root"
			}
		},
		{
			"label": "Build: Node Binary",
			"type": "shell",
			"command": "earthly --no-sat +build && earthly --no-sat +docker",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "rocket",
				"color": "terminal.ansiBlue"
			},
			"detail": "Build binary with earthly",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"revealProblems": "onProblem",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"close": true,
				"group": "chain"
			}
		},
		{
			"label": "Run: Local Node",
			"type": "shell",
			"command": "make run",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "play-circle",
				"color": "terminal.ansiBlue"
			},
			"detail": "Run local chain node",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"revealProblems": "onProblem",
				"focus": true,
				"panel": "dedicated",
				"clear": true,
				"showReuseMessage": true,
				"close": false,
				"group": "chain"
			}
		},
		{
			"label": "Open: gRPC UI Local Node",
			"type": "shell",
			"command": "grpcui -plaintext localhost:9090",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "play-circle",
				"color": "terminal.ansiBlue"
			},
			"detail": "Run local chain node",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"clear": true,
				"showReuseMessage": true,
				"close": true,
				"group": "chain"
			}
		},
	]
}
